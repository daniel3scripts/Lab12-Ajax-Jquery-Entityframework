    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SellerName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SellerLastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Dni)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ruc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SellerDate)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.SellerId }) |
            @Html.ActionLink("Details", "Details", new { id=item.SellerId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.SellerId })
        </td>
    </tr>
}

</table>
